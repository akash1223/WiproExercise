<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="item"
            type="com.appcretor.wiproexercise.model.FeedsResponse.Feed" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp6"
        android:padding="@dimen/dp8"
        android:visibility="@{item.title ==null &amp;&amp; item.description ==null &amp;&amp; item.imageHref ==null ? View.VISIBLE:View.GONE }"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp10"
        app:cardUseCompatPadding="true"
        app:elevation="@dimen/sp4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp16"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_title"
                style="@style/textHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/steel_blue"
                android:visibility="@{item.title !=null ? View.VISIBLE:View.GONE }"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{item.title}"
                tools:text="Public Shame" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_description"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_feed"
                android:visibility="@{item.description !=null ? View.VISIBLE:View.GONE }"
                android:layout_height="wrap_content"
                android:text="@{item.description}"
                android:textColor="@color/darkFontColor"
                android:textSize="@dimen/sp14"
                tools:visibility="visible"
                tools:text="It is a well known fact that polar bears are the main mode of transportation in Canada. They consume far less gas and have the added benefit of being difficult to steal."
                />
            <ImageView
                android:id="@+id/img_feed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="3:2"
                android:visibility="@{item.imageHref !=null ? View.VISIBLE:View.GONE }"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintWidth_percent="@{item.title !=null ? 0.35 :1 }"
                app:layout_constraintStart_toEndOf="@+id/txt_description"
                android:src="@drawable/the_golden_compass_still"
                tools:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>